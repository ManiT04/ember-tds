{{page-title "Ex2"}}
<h1>Services</h1>
<div class="alert alert-info">
  <span>Choisissez les éléments à inclure</span> <!--intro txt-->
  <strong>{{ plural @model.countActive
                    'Aucun service sélectionné'
                    'service sélectionné' 'services sélectionnés'}}</strong>
</div>

<ul class="list-group"> <!--liste des éléments-->
  {{#each @model.services as |service|}}
    <li class="list-group-item {{if service.active 'active' ''}}"
      {{action "toggleActive" service}}>{{service.name}} {{service.price}}</li>
  {{/each}}
</ul>

<hr>
<div class="total"> <!--somme total-->
  Total: <span>{{ @model.sumActive }}</span>
</div>

<div> <!--checkbox et input de code promo-->
  <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" aria-label="...">
      </span>
    <input type="text" class="form-control" aria-label="..." >
  </div>
</div>

{{outlet}}