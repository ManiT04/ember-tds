{{page-title "Prepare"}}

<div class="twelve wide stretched column">
  <div class="ui segment">
    <div  class="ui two column grid">

      <div class="column">
        <div class="ui attached segment"><i class="user icon"></i>Client</div>
        <div class="ui attached teal segment">
          <div class="ui divided list">
            <div class="item">
             Nom : {{ @model.user.name }} <br>
             Email : {{ @model.user.email }}
            </div>
          </div>
        </div>
      </div>

      <div class="column">
        <div class="ui attached segment"><i class="shopping basket icon"></i>Commande</div>
        <div class="ui attached teal segment">
          <div class="ui divided list">
            <div class="item">
              Commande n° {{@model.id}} <br>
              Montant {{@model.amount}} <br>
              Nombre de produit : {{@model.count}} <br>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<div class="twelve wide stretched column">
  <div class="ui segment">
    <div  class="ui one column grid">
      <div class="column">
        <div class="ui attached segment"><i class="shopping basket icon"></i>
          Avancement
        </div>

        <div class="ui attached teal segment">

          <div class="ui indicating progress">
            <div class="bar"></div>
          </div>
          <div class="label" style="text-align: center">Produits préparés</div>


          <div class="ui attached teal segment">
            <LinkTo class="ui teal basic button" @route="myOrders" @model={{ @model.id }}>Annuler la commande</LinkTo>
            <!--<LinkTo class="ui right floated teal basic button" @route="myOrders" @model={{ @model.id }}>Commande préparé</LinkTo> <br>-->
            <button class="ui right floated teal button" {{ action "prepare" @model}}>Commande préparé</button>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}