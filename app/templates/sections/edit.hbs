{{page-title "Edit"}}

<div class="twelve wide stretched column">
  <div class="ui segment">
    <div  class="ui one column grid">
      <div class="column">

        <div class="ui attached segment"><i class="tags icon"></i>
          Gestion de section : {{@model.products.section}}
          <LinkTo class="ui right floated teal button" @route="board">Board</LinkTo>
          <LinkTo class="ui right floated teal button" @route="sections">Retour aux sections</LinkTo>
        </div>

        <div class="ui attached green segment">
          <LinkTo class="btn btn-success" @route="sections.addProduct">Ajouter un produit</LinkTo>
        </div>

        <div class="ui attached green segment">
          <table class="ui striped table">
            <tbody>
            {{#each @model.products as |products|}}
              <tr>
                <td>{{products.name}}</td>
                <td>{{products.price}}</td>
                <td>
                  <LinkTo class="btn btn-primary btn-sm" @route="sections" ><i class="far fa-edit"></i></LinkTo>
                  <button class="btn btn-secondary btn-sm" {{ action "delete" products }}><i class="far fa-trash-alt"></i></button>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

{{outlet}}