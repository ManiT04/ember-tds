{{page-title "Index"}}

<h4 class="ui header dividing">Connection</h4>

<div class="=row">
  <div class="col">
    <Input @value={{@model.name}} placeholder="Entrez votre nom" class="form-control"/>
  </div>
  <div class="col">
    <Input @value={{@model.password}} placeholder="Entrez votre mot de passe" class="form-control"/>
  </div>
  <div class="col">
    <Input @value={{@model.email}} placeholder="Entrez votre email" type="email" class="form-control"/>
  </div>
  <div class="col">
    <button {{action "login" @model}} class="btn btn-primary">Se Connecter</button>
    <!--<LinkTo @route="contacts" class="btn btn-secondary">Annuler</LinkTo>-->
  </div>
</div>

{{outlet}}