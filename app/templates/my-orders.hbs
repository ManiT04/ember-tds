{{page-title "MyOrders"}}

<div class="twelve wide stretched column">
  <div class="ui segment">
    <div  class="ui one column grid">
      <div class="column">
        <div class="ui attached segment"><i class="shopping basket icon"></i>
          Commandes
          <LinkTo class="ui right floated teal button" @route="board">Aller au tableau de bord</LinkTo>
        </div>

        <div class="ui attached green segment">
          <table class="ui striped table">
            <thead>
              <tr>
                <th>Section</th>
                <th>Date de Création</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Statut</th>
              </tr>
            </thead>

            <tbody>
              {{#each @model.orderdetails as |order|}}
                <tr>
                  <td>{{ order.product.section.name }}</td>
                  <td>{{@model.dateCreation}}</td>
                  <td>{{ order.product.name }}</td>
                  <td>{{ order.product.price }}</td>
                  <td>{{ order.quantity }}</td>
                  <td>{{ @model.status }}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <div class="ui attached green segment">
          <LinkTo class="ui floated teal button" @route="myOrders.prepare" @models={{ array @model.id @model.id}}>Préparation de commande</LinkTo>
        </div>

      </div>
    </div>
  </div>
</div>


